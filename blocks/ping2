#!/usr/bin/env bash

bad_ping='100'

body=$(ping -O -c 10 -i 1 8.8.8.8)

#echo $body

# parse ping value
pattern='mdev = ([.0-9]+)\/([.0-9]+)\/([.0-9]+)\/([.0-9]+) ms'
[[ $body =~ $pattern ]]
#echo ${BASH_REMATCH}
if [ -z "${BASH_REMATCH[2]}" ]; then
	echo "<span color='red'>fail</span>"
else
	if (( $(echo "${BASH_REMATCH[2]} > $bad_ping" |bc -l) )); then 
		echo "<span color='red'><span font_desc='FontAwesome'> </span>${BASH_REMATCH[2]}</span>"
	else
		echo "<span font_desc='FontAwesome'> </span>${BASH_REMATCH[2]}"
	fi
fi

# parse lost packets
pattern=' ([.0-9]+)\% packet loss'
[[ $body =~ $pattern ]]
#echo ${BASH_REMATCH}
if [ -z "${BASH_REMATCH[1]}" ]; then
	if (( $(echo "${BASH_REMATCH[1]} > 0" |bc -l) )); then 
		echo " - <span color='red'>${BASH_REMATCH[1]}%</span>"
	fi
fi
